---
import Layout from "../../../layout/Layout.astro";
const { id } = Astro.params;

const response = await fetch(
  "https://api.themoviedb.org/3/movie/" +
    id +
    "?api_key=3d9cfdcb69c3254f0cb45bf4e8df7d75&language=es-ES"
);

const data = await response.json();
const poster_url = "https://image.tmdb.org/t/p/w500/";

//Trailer

const fetchVideo = await fetch(
  "https://api.themoviedb.org/3/movie/" +
    id +
    "/videos?api_key=3d9cfdcb69c3254f0cb45bf4e8df7d75&language=en-US"
);

const trailer = await fetchVideo.json();

const res = trailer.results?.filter((p) => p.type == "Trailer");

const video = res[0];
const youtube = "https://www.youtube.com/embed/";
---

<Layout>
  <div class="row mt-5">
    <div class="col-md-4">
      <img
        src={poster_url + data.poster_path}
        alt="poster"
        class="img-fluid rounded-start"
      />
    </div>
    <div class="col-md-8">
      <h1><span class="badge text-bg-dark">{data.title}</span></h1>
      <h4>{data.tagline}</h4>
      <h2>Overview</h2>
      <p>{data.overview}</p>
      <p><span class="badge text-bg-secondary">{data.release_date}</span></p>
      <h1>
        <span class="badge text-bg-danger">{Math.round(data.vote_average)}</span
        >
      </h1>
    </div>
  </div>

  <h1>Trailer</h1>

  <iframe src={youtube + video.key} width="1280" height="720" allowfullscreen
  ></iframe>
</Layout>
